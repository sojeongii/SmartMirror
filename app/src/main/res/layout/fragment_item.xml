<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StylingActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/layout_style2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="  Item Category"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:gravity="bottom"
            android:fontFamily="@font/neucharegular"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/layout_style2">
        <Button
            app:backgroundTint = "@null"
            android:id="@+id/btn_top"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:text="top"
            android:textSize="13dp"
            android:textColor="#a1c4fd"
            android:textStyle="bold"
            android:fontFamily="@font/neucharegular"
            android:background="@drawable/btn_style2"
            android:includeFontPadding="false"/>
        <Button
            app:backgroundTint = "@null"
            android:id="@+id/btn_bottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:text="bottom"
            android:textSize="13dp"
            android:textColor="#a1c4fd"
            android:textStyle="bold"
            android:fontFamily="@font/neucharegular"
            android:background="@drawable/btn_style2"
            android:includeFontPadding="false"/>
        <Button
            app:backgroundTint = "@null"
            android:id="@+id/btn_outer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:text="outer"
            android:textSize="13dp"
            android:textColor="#a1c4fd"
            android:textStyle="bold"
            android:fontFamily="@font/neucharegular"
            android:background="@drawable/btn_style2"
            android:includeFontPadding="false"/>

        <Button
            app:backgroundTint = "@null"
            android:id="@+id/btn_etc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:includeFontPadding="false"
            android:scaleType="fitCenter"
            android:textSize="13dp"
            android:textColor="#a1c4fd"
            android:textStyle="bold"
            android:fontFamily="@font/neucharegular"
            android:background="@drawable/btn_style2"
            android:text="etc" />
    </LinearLayout>

    <ListView
        android:id="@+id/itemList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:includeFontPadding="false" />


</LinearLayout>
